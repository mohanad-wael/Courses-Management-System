@using Task.ModelViews
@model AddTeacherModelView
@{
    ViewData["Title"] = Model.Id == 0 ? "Add Teacher" : "Edit Teacher";
}

<h5>
    <i class="bi bi-person-badge"></i> @ViewData["Title"]
</h5>
<form asp-controller="Teachers" asp-action="Create">
    <div class="row">
        <div class=" col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name " placeholder="Enter Teacher Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CourseId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CourseId" asp-items="Model.Courses">
                    <option value="">Select Course</option>                 
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-outline-primary mt-4">Save</button>
        </div>
        <div class=" col-md-6"></div>
    </div>

</form>