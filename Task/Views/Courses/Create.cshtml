@using Task.ModelViews
@model AddCourseModelView
@{
    ViewData["Title"] = Model.Id==0? "Add Course":"Edit Course";
}

<h5>
    <i class="bi bi-journal-plus"></i> @(ViewData["Title"])
</h5>
<form asp-controller="Courses" asp-action="Create">
    <div class="row">
        <div class=" col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Course Name">
                <span asp-validation-for="Name" class="text-danger">   </span>
            </div>
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-primary mt-4">Save</button>
        </div>
        <div class=" col-md-6"></div>
    </div>
     
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}